@model IEnumerable<LibrarySestem.WEB.Models.BookViewModel>

@{
    if (Model != null && Model.Count() != 0)
    {

        foreach (var book in Model)
        {
                @book.Id
                <br />

                @book.Author
                <br />

                @book.Title
                <br />

                @book.Year
                <br />

                <br /><br />
        }
    }
    else
    {
            @:Книг ещё нет
    }
}

